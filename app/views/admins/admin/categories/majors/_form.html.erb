<%= form_for @major, url: url do |f| %>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="mb-3">
                <% invalid = @major.errors.include?(:name) %>
                <label for="name" class="my-1">Nama Jurusan</label>
                <%= f.text_field :name, class: "form-control #{'is-invalid' if invalid}", id: "name", placeholder: "Masukkan nama jurusan", required: true %>
                <% if invalid %>
                    <div class="invalid-feedback d-block">
                        <% @major.errors.full_messages_for(:name).each do |error_message| %>
                            <%= error_message %>
                        <% end %>
                    </div>
                <% end %>
            </div>
            <div class="mb-3">
                <% invalid = @major.errors.include?(:short) %>
                <label for="short" class="my-1">Singkatan</label>
                <%= f.text_field :short, class: "form-control #{'is-invalid' if invalid}", id: "short", placeholder: "Masukkan singkatan", required: true %>
                <% if invalid %>
                    <div class="invalid-feedback d-block">
                        <% @major.errors.full_messages_for(:short).each do |error_message| %>
                            <%= error_message %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <hr>
    <div class="col-12 text-end">
        <button type="reset" class="btn btn-danger fs-5">Reset</button>
        <button type="submit" class="btn btn-primary fs-5">Submit</button>
    </div>
<% end %>