<%= form_for @class_room_major, url: url do |f| %>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="mb-3">
                <% invalid = class_room_major.errors.include?(:name) %>
                <label for="name" class="my-1">Nama Kelas</label>
                <%= f.text_field :name, class: "form-control #{'is-invalid' if invalid}", id: "name", placeholder: "Masukkan nama jurusan", required: true %>
                <% if invalid %>
                    <div class="invalid-feedback d-block">
                        <% class_room_major.errors.full_messages_for(:name).each do |error_message| %>
                            <%= error_message %>
                        <% end %>
                    </div>
                <% end %>
            </div>
            <div class="mb-3">
                <% invalid = class_room_major.errors.include?(:id_major) %>
                <label for="id_major" class="my-1">Jurusan</label>
                <%= select_tag "id_major", options_from_collection_for_select(@majors, 'id', 'short', selected: f.object.major_id), class: "form-select #{'is-invalid' if invalid}", required: true %>
                <% if invalid %>
                    <div class="invalid-feedback d-block">
                        <% class_room_major.errors.full_messages_for(:id_major).each do |error_message| %>
                            <%= error_message %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <hr>
    <div class="col-12 text-end">
        <button type="reset" class="btn btn-danger fs-5">Reset</button>
        <button type="submit" class="btn btn-primary fs-5">Submit</button>
    </div>
<% end %>
