<%= form_for @budget_spp, url: url do |f| %>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="mb-3">
                <% invalid = budget_spp.errors.include?(:year) %>
                <label for="year" class="my-1">Tahun</label>
                <%= f.text_field :year, class: "form-control #{'is-invalid' if invalid}", "data-mask": "0000", maxlength:"4",id: "year", placeholder: "Masukkan tahun", required: true %>
                <% if invalid %>
                    <div class="invalid-feedback d-block">
                        <% budget_spp.errors.full_messages_for(:year).each do |error_message| %>
                            <%= error_message %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <hr>
    <div class="col-12 text-end">
        <button type="reset" class="btn btn-danger fs-5">Reset</button>
        <button type="submit" class="btn btn-primary fs-5">Submit</button>
    </div>
<% end %>
